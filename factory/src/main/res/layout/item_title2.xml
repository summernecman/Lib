<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="title"
            type="com.summer.factory.bean.da.LayoutDABean" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ftitle_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_base_title"
    android:background="@color/color_blue_400"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ftv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="7dp"
        android:gravity="center"
        android:padding="2dp"
        android:scaleType="fitStart"
        android:src="@drawable/drawable_back2"
        android:textColor="@color/color_title_select"
        android:textSize="17sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/ftv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_title"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2.5dp"
        android:text="@={title.a}"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible" />


    <ImageView
        android:id="@+id/ftv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="7dp"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:scaleType="fitEnd"
        android:src="@drawable/drawable_right2"
        android:textColor="@color/color_title_select"
        android:textSize="17sp"
        android:visibility="visible" />

</RelativeLayout>
</layout>
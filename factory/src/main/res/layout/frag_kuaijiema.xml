<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="kuaijiema"
            type="com.summer.factory.bean.da.LayoutDABean" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_100"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_base_item"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@={kuaijiema.a}"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimens_base_item"
                android:layout_weight="1"
                android:background="@drawable/drawable_border_rect_black"
                android:paddingLeft="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_base_item"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@={kuaijiema.a}"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <include
            android:id="@+id/wuliaohead"
            layout="@layout/item_title_3" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_100"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_base_item"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@={kuaijiema.a}"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_base_item"
                android:background="@drawable/drawable_border_rect_black"
                android:paddingLeft="2dp" />
        </LinearLayout>
    </LinearLayout>
</layout>
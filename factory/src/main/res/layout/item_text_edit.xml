<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="itemtextedit"
            type="com.summer.factory.bean.da.LayoutDABean" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blue_100"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_base_item"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@={itemtextedit.a}"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_base_item"
                android:background="@drawable/drawable_border_rect_black"
                android:paddingLeft="2dp"
                android:singleLine="true"
                android:text="@={itemtextedit.b}" />
        </LinearLayout>
    </LinearLayout>
</layout>
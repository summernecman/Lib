<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_base_bottom"
        android:background="@color/white">

        <com.android.lib.view.menuview.homebottom.HomeBottomItem
            android:id="@+id/ll_bed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:src="@drawable/drawable_video" />

            <TextView
                android:id="@+id/tv_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="历史"
                android:textColor="@color/color_bottom_select"
                android:textSize="11sp" />
        </com.android.lib.view.menuview.homebottom.HomeBottomItem>

        <com.android.lib.view.menuview.homebottom.HomeBottomItem
            android:id="@+id/ll_mission"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:src="@drawable/drawable_call" />

            <TextView
                android:id="@+id/tv_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="呼叫"
                android:textColor="@color/color_bottom_select"
                android:textSize="11sp" />
        </com.android.lib.view.menuview.homebottom.HomeBottomItem>


        <com.android.lib.view.menuview.homebottom.HomeBottomItem
            android:id="@+id/ll_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="1dp"
                android:src="@drawable/drawable_setting1" />

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="个人"
                android:textColor="@color/color_bottom_select"
                android:textSize="11sp" />
        </com.android.lib.view.menuview.homebottom.HomeBottomItem>


    </LinearLayout>
</LinearLayout>

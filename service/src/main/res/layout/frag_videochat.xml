<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="videochat"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/surfaceview_local"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#7f7f7f"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_speakControl"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_background"
                android:src="@drawable/speak_on" />

            <ImageButton
                android:id="@+id/btn_speakControl_remove"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_background"
                android:src="@drawable/speak_on" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/trans_white" />

            <Button
                android:id="@+id/endCall"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:text="@string/str_endCall"
                android:textColor="@color/shollow_red"
                android:textSize="23sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/trans_white" />

            <ImageButton
                android:id="@+id/btn_switchvideo"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_background"
                android:src="@drawable/switchvideo" />

            <ImageButton
                android:id="@+id/btn_cameraControl"
                android:layout_width="52dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_background"
                android:src="@drawable/camera_on" />
        </LinearLayout>
    </LinearLayout>
</layout>
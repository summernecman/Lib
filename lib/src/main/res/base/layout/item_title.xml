<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="titlebean1"
            type="com.android.lib.bean.TitleBean" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ftitle_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_base_title"
    android:background="@color/color_base_nurse"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ftv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:paddingBottom="2.5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2.5dp"
        android:text="@={titlebean1.leftTxt}"
        android:textColor="@color/color_title_select"
        android:textSize="17sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/ftv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/drawable_title"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2.5dp"
        android:text="@={titlebean1.midTxt}"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/ftv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/drawable_right"
        android:gravity="center_vertical"
        android:paddingBottom="2.5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2.5dp"
        android:text="@={titlebean1.rightTxt}"
        android:textColor="@color/color_title_select"
        android:textSize="17sp"
        android:visibility="visible" />

</RelativeLayout>

</layout>